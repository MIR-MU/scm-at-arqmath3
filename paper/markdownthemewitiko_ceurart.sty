\ProvidesPackage{markdownthemewitiko_ceurart}[2022/05/27]

% Themes and syntax extensions
\markdownSetup{
  citations = true,
  definitionLists = true,
  eagerCache = false,
  footnotes = true,
  headerAttributes = true,
  pipeTables = true,
  relativeReferences = true,
  tableCaptions = true,
  smartEllipses = true,
  theme = witiko/tilde,
}

% Links
\renewcommand\markdownLaTeXRendererDirectOrIndirectLink[4]{%
  #1\footnote{See \url{#3}\ifx\empty#4\empty\else, #4\fi.}}

% Tables
\renewcommand\fps@table{!t}

% Figures
\setkeys{Gin}{
  width = \columnwidth,
  height = 0.65\paperheight,
  keepaspectratio,
}
\markdownSetup{
  renderers = {
    image = {%
      \begin{figure}%
        \begin{center}%
          \includegraphics{#3}%
        \end{center}%
        \ifx\empty#4\empty\else
          \caption{#4}%
        \fi
        \label{fig:#1}%
      \end{figure}},
  }
}

% Content blocks
\markdownSetup{
  contentBlocks = true,
  renderers = {
    interblockSeparator = {% Avoid `\par` before a content block
      \def\next##1##2{%
        \ifx\markdownRendererContentBlock##2\relax
          \expandafter\markdownRendererContentBlock
        \else
          \markdownRendererInterblockSeparatorPrototype
          \expandafter
          ##2%
        \fi
      }%
      \next
    },
    contentBlock = {% Avoid `\par` after a content block
      \markdownRendererContentBlockPrototype{#1}{#2}{#3}{#4}%
      \begingroup
      \markdownSetup{
        renderers = {
          interblockSeparator = {%
            \endgroup
          },
        },
      }%
    },
  }
}

% Metadata
\markdownSetup{
  jekyllData = true,
  renderers = {
    jekyllDataEnd = {},
  },
}
